{
	"comments": {
		"blockComment": [ "/*", "*/" ],
		"lineComment": "#"
	},
	"brackets": [
		[ "(", ")" ],
		[ "[", "]" ],
		[ "{", "}" ]
	],
	"autoClosingPairs": [
		{
			"open": "/*",
			"close": "*/",
			"notIn": [ "comment", "string" ]
		},
		{
			"open": "'",
			"close": "'",
			"notIn": [ "comment", "string" ]
		},
		{
			"open": "\"",
			"close": "\"",
			"notIn": [ "string" ]
		},
		{
			"open": "`",
			"close": "`",
			"notIn": [ "string" ]
		},
		[ "(", ")" ],
		[ "[", "]" ],
		[ "{", "}" ]
	],
	"surroundingPairs": [
		[ "/", "/" ],
		[ "*", "*" ],
		[ "#", "#" ],
		[ "?", "!" ],
		[ "'", "'" ],
		[ "\"", "\"" ],
		[ "`", "`" ],
		[ "(", ")" ],
		[ "[", "]" ],
		[ "{", "}" ]
	],
	"autoCloseBefore": "#!&|~<+-*/%^=?$@. \t",
	"wordPattern": "\\b[0-9A-Z_a-z]+\\b"
}