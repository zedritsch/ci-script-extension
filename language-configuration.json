{
	"comments": {
		"blockComment": [ "/*", "*/" ],
		"lineComment": "#"
	},
	"brackets": [
		[ "(", ")" ],
		[ "[", "]" ],
		[ "{", "}" ]
	],
	"autoClosingPairs": [
		{
			"open": "/*",
			"close": "*/",
			"notIn": [ "comment", "string" ]
		},
		{
			"open": "?",
			"close": "!",
			"notIn": [ "comment", "string" ]
		},
		{
			"open": "'",
			"close": "'",
			"notIn": [ "comment", "string" ]
		},
		{
			"open": "\"",
			"close": "\"",
			"notIn": [ "string" ]
		},
		{
			"open": "`",
			"close": "`",
			"notIn": [ "string" ]
		},
		[ "(", ")" ],
		[ "[", "]" ],
		[ "{", "}" ]
	],
	"surroundingPairs": [
		[ "/", "/" ],
		[ "*", "*" ],
		[ "#", "#" ],
		[ " ", " " ],
		[ "?", "!" ],
		[ "\\", "\\" ],
		[ "'", "'" ],
		[ "\"", "\"" ],
		[ "`", "`" ],
		[ "(", ")" ],
		[ "[", "]" ],
		[ "{", "}" ]
	],
	"autoCloseBefore": "\t\n !#$%&*+,-./:;<=>?@^|~",
	"folding": {
		"offSide": true,
		"markers": {
			"start": "[([{]",
			"end": "[)\\]}]"
		}
	},
	"wordPattern": "\\b[0-9A-Z_a-z]+\\b",
	"indentationRules": {
		"increaseIndentPattern": "[([{]\\s*$",
		"decreaseIndentPattern": "(?<![([{].*)[)\\]}]\\s*$"
	}
}