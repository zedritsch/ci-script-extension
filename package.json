{
	"name": "ci-script-for-vs-code",
	"displayName": "CI-Script for VS-Code",
	"description": "CI-Script support for Visual Studio Code",
	"publisher": "zedritsch",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/zedritsch/ci-script-for-vs-code"
	},
	"engines": {
		"vscode": "^1.75.0"
	},
	"categories": [
		"Programming Languages",
		"Debuggers",
		"Formatters",
		"Linters",
		"Other"
	],
	"keywords": [
		"CI-Script",
		"ci-script",
		"cis"
	],
	"icon": "img/icon.png",
	"l10n": "l10n",
	"main": "extension",
	"contributes": {
		"languages": [
			{
				"id": "ci-script",
				"icon": {
					"dark": "img/dark.png",
					"light": "img/light.png"
				},
				"aliases": [
					"CI-Script",
					"ci-script",
					"cis"
				],
				"extensions": [
					".cis"
				],
				"configuration": "language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "ci-script",
				"scopeName": "source.cis",
				"path": "syntax/ci-script.tmLanguage.json"
			}
		],
		"configuration": {
			"title": "CI-Script",
			"properties": {
				"languageServer.enable": {
					"description": "%languageServer.enable%",
					"type": "boolean",
					"default": true,
					"scope": "resource"
				},
				"languageServer.location": {
					"description": "%languageServer.location%",
					"type": "string",
					"scope": "resource"
				}
			}
		},
		"configurationDefaults": {
			"[ci-script]": {
				"editor.insertSpaces": false
			}
		}
	}
}