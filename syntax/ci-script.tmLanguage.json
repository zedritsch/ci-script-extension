{
	"name": "CI-Script",
	"patterns": [
		{
			"name": "comment.cis",
			"begin": "/\\*",
			"end": "\\*/",
			"patterns": [
				{
					"begin": "/\\*",
					"end": "\\*/"
				},
				{ "match": "\\\\`" },
				{
					"name": "meta.embedded.cis",
					"begin": "`",
					"end": "`",
					"patterns": [ { "include": "$self" } ]
				}
			]
		},
		{
			"name": "comment.cis",
			"match": "#.*"
		},
		{
			"name": "keyword.cis",
			"match": "\\b(?:async|auto|await|bool|break|char|const|enum|export|false|for|from|func|if|import|in|module|mut|not|null|return|skip|str|struct|this|true|var|void|while|[iu](?:8|16)|[iuf](?:32|64|128))\\b"
		},
		{
			"name": "keyword.operator.cis",
			"match": "!=?|&&?|\\+\\+?|--?|\\.[.=]|<[<=~]?|==?|>[=>]?|\\|\\|?|~[>~]?|[$%*/?@^]"
		},
		{
			"name": "constant.numeric.cis",
			"match": "\\b(?:0(?:x(?:[0-9A-Fa-f]+_)*[0-9A-Fa-f]+|o(?:[0-7]+_)*[0-7]+|b(?:[01]+_)*[01]+)?|\\d+[\\d_]*(?:\\.\\d+)?)\\b"
		},
		{
			"name": "string.cis",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.cis",
					"match": "\\\\['0abefnrtv\\\\]"
				},
				{
					"name": "invalid.cis",
					"match": "\\\\."
				}
			]
		},
		{
			"name": "string.cis",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.cis",
					"match": "\\\\(?:[\"0abefnrtv\\\\{]|x[0-7]?[0-9A-Fa-f]|o[0-1]?[0-7]{1,2}|u[0-9A-Fa-f]{1,4}|U[0-9A-Fa-f]{1,8})"
				},
				{
					"name": "invalid.cis",
					"match": "\\\\."
				},
				{
					"name": "meta.embedded.cis",
					"begin": "{",
					"end": "}",
					"patterns": [ { "include": "$self" } ]
				}
			]
		},
		{
			"name": "entity.name.type.cis",
			"match": "(?<=:\\s*|\\b(?:enum|struct)\\s+)[0-9A-Z_a-z]+\\b|\\b[0-9A-Z_a-z]+(?!\\.[0-9A-Z_a-z]+\\()(?=\\.[0-9A-Z_a-z]+)"
		},
		{
			"name": "entity.name.function.cis",
			"match": "(?<=\\bfunc\\s+)[0-9A-Z_a-z]+\\b|\\b[0-9A-Z_a-z]+(?=\\()"
		},
		{
			"name": "variable.parameter.cis",
			"match": "(?<=\\bfunc\\s.*)[0-9A-Z_a-z]+(?=\\s*:)"
		},
		{
			"name": "variable.other.constant.cis",
			"match": "(?<=\\bconst\\s+|[0-9A-Z_a-z]\\.)[0-9A-Z_a-z]+\\b|(?<!\\b(?:mut|var)\\s+)\\b[0-9_]*[A-Z][0-9A-Z_a-z]*\\b"
		},
		{
			"name": "variable.cis",
			"match": "\\b[0-9A-Z_a-z]+\\b"
		}
	],
	"scopeName": "source.cis"
}