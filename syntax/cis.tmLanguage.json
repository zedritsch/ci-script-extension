{
	"scopeName": "source.cis",
	"patterns": [
		{
			"name": "comment.cis",
			"begin": "/\\*",
			"end": "\\*/",
			"patterns": [
				{ "match": "\\\\`" },
				{
					"name": "meta.embedded.cis",
					"begin": "`",
					"end": "`",
					"patterns": [ { "include": "$self" } ]
				}
			]
		},
		{
			"name": "comment.cis",
			"match": "#.*"
		},
		{
			"name": "keyword.cis",
			"match": "\\b(a(sync|uto|wait)|b(ool|reak)|c(har|onst)|e(num|xport)|f(128|32|64|alse|or|rom|unc)|i([fn]|mport)|[iu](1(28|6)|32|64|8)|m(odule|ut)|n(ot|ull)|return|s(kip|tr|truct)|t(his|rue)|v(ar|oid)|while)\\b"
		},
		{
			"name": "keyword.operator.cis",
			"match": "!=?|&&?|\\+\\+?|--?|\\.[.=]|<[<=~]?|==?|>[=>]?|\\|\\|?|~[>~]?|[$%*/?@^]"
		},
		{
			"name": "constant.numeric.cis",
			"match": "\\b(0(x([0-9A-Fa-f]+_)*[0-9A-Fa-f]+|o([0-7]+_)*[0-7]+|b([01]+_)*[01]+)?|\\d+[\\d_]*(\\.\\d+)?)\\b"
		},
		{
			"name": "string.cis",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.cis",
					"match": "\\\\(['0abefnrtv\\\\]|x[0-7]?[0-9A-Fa-f])"
				},
				{
					"name": "invalid.cis",
					"match": "\\\\."
				}
			]
		},
		{
			"name": "string.cis",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.cis",
					"match": "\\\\([\"0abefnrtv\\\\{]|x[0-7]?[0-9A-Fa-f]|u[0-9A-Fa-f]{1,4}|U[0-9A-Fa-f]{1,8})"
				},
				{
					"name": "invalid.cis",
					"match": "\\\\."
				},
				{
					"name": "meta.embedded.cis",
					"begin": "{",
					"end": "}",
					"patterns": [ { "include": "$self" } ]
				}
			]
		},
		{
			"name": "entity.name.type.cis",
			"match": "(?<=:\\s*|\\b(enum|struct)\\s+)[0-9A-Z_a-z]+\\b"
		},
		{
			"name": "entity.name.function.cis",
			"match": "(?<=\\bfunc\\s+)[0-9A-Z_a-z]+\\b|\\b[0-9A-Z_a-z]+(?=\\()"
		},
		{
			"name": "variable.parameter.cis",
			"match": "(?<=\\bfunc\\s.*)[0-9A-Z_a-z]+(?=\\s*:)"
		},
		{
			"name": "variable.other.constant.cis",
			"match": "(?<=\\bconst\\s+)[0-9A-Z_a-z]+\\b"
		},
		{
			"name": "variable.cis",
			"match": "\\b[0-9A-Z_a-z]+\\b"
		}
	]
}